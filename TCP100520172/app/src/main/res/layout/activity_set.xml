<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/back2"
    android:orientation="vertical"
    android:weightSum="5">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="209dp"
        android:layout_height="87dp"
        android:src="@mipmap/logo" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="276dp"
        android:layout_marginTop="25dp"
        android:background="@mipmap/bake">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="150dp"
            android:layout_marginTop="80dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="170dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="0dp"
                android:src="@mipmap/text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="165dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="150dp"
            android:layout_marginTop="80dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="143dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="2dp"
                android:paddingLeft="40dp"
                android:paddingTop="4dp"
                android:text="Regular"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="210dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="172dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:src="@mipmap/text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="172dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="211dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="1dp"
                android:text="10"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="200dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="180dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="122dp"
                    android:layout_height="75dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:src="@mipmap/sizeog" />

                <SeekBar
                    android:id="@+id/seekBar5"
                    android:layout_width="178dp"
                    android:layout_height="68dp"
                    android:layout_marginBottom="0dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="0dp"
                    android:layout_weight="1"
                    android:max="3"

                    android:progress="2" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="98dp"
            android:layout_marginTop="150dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="129dp"
                    android:layout_height="75dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:src="@mipmap/qty" />

                <SeekBar
                    android:id="@+id/seekBar"
                    android:layout_width="178dp"
                    android:layout_height="68dp"
                    android:layout_marginBottom="0dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="0dp"
                    android:layout_weight="1"
                    android:layerType="software"
                    android:max="20"
                    android:progress="10" />

            </LinearLayout>
        </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button3"
            android:layout_width="83dp"
            android:layout_height="71dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="@mipmap/clean" />

        <Button
            android:id="@+id/btn_tcpset3"
            android:layout_width="89dp"
            android:layout_height="70dp"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="@mipmap/bake_main" />

    </LinearLayout>

</LinearLayout>